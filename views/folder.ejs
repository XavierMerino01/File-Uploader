<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Folders</title>
</head>
<body>
    <h1><%= folder.name %></h1>
    <% if (folder.files) { %>
        <h2>Folder Files</h2>
        <ul>
          <% folder.files.forEach(file => { %>
            <a href="/files/<%= file.id%>"><%= file.name %></a>
          <% }) %>
        </ul>
      <% } %>
    <h2>Upload New File</h2>
      <%- include('upload', { folderId: folder.id }) %>
</body>
</html>